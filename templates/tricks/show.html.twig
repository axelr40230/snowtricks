{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <section>
        <div class="container-fluid  h-100">
            <div class="row">
                <div class="col p-0 text-center justify-content-center align-self-center">
                    <div class="card bg-dark text-white">
                        <div class="card-img-overlay d-flex justify-content-end zindex-1000 h-25">
                            <a href="{{ path('trick_edit', {'slug': trick.slug}) }}" class="card-link text-white">Modify</a>
                            <a href="#" class="card-link text-white">Delete</a>
                        </div>
                        <img class="card-img" src="{{ trick.image }}" alt="Card image">

                        <div class="card-img-overlay d-flex ">
                            <h1 class="card-title w-100 text-uppercase d-flex justify-content-center align-self-center text-shadow">{{ trick.title }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="articles">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <article class="py-5">
                        {{ trick.content | raw }}
                    </article>
                </div>
            </div>
        </div>
    </section>
{% endblock %}